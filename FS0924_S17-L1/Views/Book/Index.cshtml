@model BooksListViewModel

@{
    ViewData["Title"] = "All Books";
}

@if (Model.Books != null && Model.Books.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Author</th>
                <th>Category</th>
                <th>Cover</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model.Books)
            {
                <tr>
                    <td>@book.Id</td>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.Category</td>
                    <td>@book.Cover</td>
                </tr>
            }
        </tbody>
    </table>
    
} else
{
    <p>No book found!</p>
}